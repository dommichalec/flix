<h1>Sign in</h1>

<!-- The form_tag helper takes as its parameter the URL where the form
     will POST the form data -->
<%= form_tag(session_path) do %>
  <%= label_tag :email %>
  <%= email_field_tag :email, nil, autofocus: true, required: true %>
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, required: true %>
  <p>
    <%= submit_tag 'Sign In' %>
  </p>
<% end %>
