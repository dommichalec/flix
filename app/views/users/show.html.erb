<h1><%= @user.full_name %></h1>
<% if @favorite_movies.any? %>
  <h3>Favorite Movies</h3>
  <% @favorite_movies.each do |fav| %>
    <ul><%= link_to fav.title, movie_path(fav) %></ul>
  <% end %>
<% end %>
<h3>Movie Registrations</h3>
<% @registrations.each do |registration| %>
  <ul style="none"><%= link_to(registration.movie.title, registration.movie) %></ul>
<% end %>

<% if current_user?(@user) %>
<%= link_to("Edit your account", edit_user_path(@user)) %>
<%= link_to("Delete your account", user_path(@user), method: :delete,
          data: { confirm: "Are you sure you want to delete your account?" }) %>
<% end %>
